doctype 5
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    title Collaborative ToDo
    link(rel="stylesheet", href="css/todo.css")
  body
    section.todoapp
      header.header
        h1 todo list
        input.new-todo(placeholder="What needs to be done?", autofocus)
    section.main
      ul.todo-list
    footer.footer
      section.connect
        | Join list:
        input.join-list-name
        button.join join
      section.disconnect.hidden
        | Joined list: &nbsp;
        span.connected-list List name
        button.leave Leave
      button.clear-completed Clear completed

    != js("jquery-1.10.1.min")
    script(src="/socket.io/socket.io.js")
    != js("todo")